<div class="w-100 custom-margin-top-home text-center">
  <!-- BANNER -->
  <div>
    <%= image_tag "banner.png", class: "w-100 banner home-img" %>
    <!-- BANNER NAVBAR -->
    <div class='d-flex navbar'>
      <%= image_tag "logo.png"%>
      <button>Entrar</button>
    </div>
    <!-- BANNER CONTENT -->
    <div class='d-flex content'>
      <!-- TEXT-->
      <div>
        <h3>Faca parte do melhor clube de vantagens para estudantes</h3>
        <p>*Por menos de R$ 1,00 ao mes</p>
        <button>Associe-se</button>
      </div>
      <!-- IMAGE  -->
      <%= image_tag "logo.png"%>
    </div>
  </div>
  <!-- BENEFITS -->
  <h1 class='text-center'>Beneficios</h1>

  <div class='d-flex justify-content-center text-center'>
    <div class='box'>
      <i class="fas fa-ticket-alt"></i>
      <p>Desconto em cinemas e eventos</p>
    </div>
    <div class='box'>
      <i class="fas fa-shopping-cart"></i>
      <p>Desconto em compras</p>
    </div>
    <div class='box'>
      <i class="fas fa-headphones-alt"></i>
      <p>Desconto em servicos de streaming</p>
    </div>
  </div>
  <!-- HOW IT WORKS -->
  <h1 class='text-center'>Como funciona?</h1>

  <div class='d-flex justify-content-center text-center'>
    <div class='round'>
      <i class="fas fa-file-signature text-center align-text-bottom"></i>
      <p>Faca seu cadastro</p>
    </div>
    <div class='round'>
      <i class="fas fa-coins"></i>
      <p>Pague a taxa de R$8,58/ano</p>
    </div>
    <div class='round'>
      <i class="fas fa-gifts"></i>
      <p>Aproveite os beneficios</p>
    </div>
  </div>
  <!-- SPONSORS -->
  <h1 class='text-center'>Parceiros</h1>

  <%= image_tag "sponsors.png", class: "w-50 container justify-content-center" %>
</div>
